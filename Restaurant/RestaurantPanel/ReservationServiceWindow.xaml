<Window x:Class="RestaurantPanel.ReservationServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantPanel"
        mc:Ignorable="d"
        Title="ReservationServiceWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Reservation Service" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Average Rating:"/>
            <TextBox x:Name="AverageRatingTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <CheckBox x:Name="EnableReservationCheckBox" Content="Enable Reservation Service" Margin="0,0,0,10"/>

            <Button Content="Save" Width="100" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
    
</Window>
